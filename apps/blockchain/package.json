{
  "name": "@gamble/blockchain",
  "version": "1.0.0",
  "description": "The contracts development environment powering the GAMBLE token and games",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "deliver": "ts-node scripts/deliver-contract.ts",
    "deploy:dev": "TS_NODE_TRANSPILE_ONLY=1 hardhat run --network localhost scripts/deploy-dev-env.ts",
    "deploy:fuji": "TS_NODE_TRANSPILE_ONLY=1 hardhat run --network fuji scripts/deploy-fuji.ts",
    "gen-types": "yarn build  && TS_NODE_TRANSPILE_ONLY=1 ts-node scripts/types.ts",
    "rng": "TS_NODE_TRANSPILE_ONLY=1 ts-node scripts/local-rng.ts",
    "script:fuji": "TS_NODE_TRANSPILE_ONLY=1 hardhat run --network fuji",
    "start:chain": "hardhat node",
    "test": "npx hardhat test:jest"
  },
  "dependencies": {
    "@gamble/config": "workspace:^",
    "@gamble/gamebit-authorizations": "workspace:^",
    "@gamble/infra": "workspace:^",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "isomorphic-unfetch": "^3.1.0",
    "typechain": "^7.0.0"
  },
  "devDependencies": {
    "@appliedblockchain/chainlink-plugins-fund-link": "^0.0.3",
    "@babel/preset-typescript": "^7.16.0",
    "@defi-wonderland/smock": "^2.0.7",
    "@ethereum-waffle/jest": "^3.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "config": "*",
    "cross-env": "^7.0.3",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.7.0",
    "hardhat-erc1820": "^0.1.0",
    "hardhat-jest-plugin": "^0.0.6",
    "jest": "^27.5.1",
    "jest-environment-node-single-context": "^27.2.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
